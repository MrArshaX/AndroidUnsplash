<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arsha.unsplash.Activities.FollowActivity">
    <ImageView
        android:id="@+id/follow_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_arrow_back"
        android:padding="2dp"/>
    <TextView
        android:id="@+id/follow_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/follow_back"
        android:layout_alignBottom="@id/follow_back"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/darkGray"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/follow_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/follow_userName"
        android:layout_marginTop="10dp"
        app:tabIndicatorColor="@color/darkGray"
        app:tabIndicatorHeight="1dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/follow_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/follow_tabs"/>
</RelativeLayout>
