<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/followlist_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/followlist_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/followlist_avatar"
        app:layout_constraintLeft_toRightOf="@id/followlist_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/darkGray"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/followlist_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/followlist_fullName"
        app:layout_constraintLeft_toRightOf="@id/followlist_avatar"
        app:layout_constraintBottom_toBottomOf="@id/followlist_avatar"
        android:layout_marginLeft="10dp"
        android:textColor="@color/lightGray"
        android:textSize="13dp"/>

</android.support.constraint.ConstraintLayout>